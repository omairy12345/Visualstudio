@model IEnumerable<Newsapplibrary.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombrecategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombrecategory)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idcategory">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idcategory">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idcategory">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
